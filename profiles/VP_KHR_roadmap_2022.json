                    "struct": "VkPhysicalDeviceVulkan11Features",
                    "members": {
                        "multiview": true
                    }
                }
            ],
            "properties": [
                {
                    "struct": "VkPhysicalDeviceVulkan11Properties",
                    "members": {
                        "maxMultiviewViewCount": 6,
                        "maxMultiviewInstanceIndex": 134217727
                    }
                }
            ]
        },
        {
            "name": "vulkan12requirements",
