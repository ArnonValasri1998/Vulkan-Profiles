    "capabilities": [
        {
            "name": "vulkan10requirements",
            "features": [
                {
                    "struct": "VkPhysicalDeviceFeatures",
                    "members": {
                        "robustBufferAccess": true
                    }
                }
            ]
        },
        {
            "name": "vulkan11requirements",
            "features": [
