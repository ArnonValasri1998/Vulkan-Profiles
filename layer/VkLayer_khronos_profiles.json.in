{
    "file_format_version": "1.2.1",
    "layer": {
        "name": "VK_LAYER_KHRONOS_profiles",
        "type": "GLOBAL",
        "library_path": "@RELATIVE_LAYER_BINARY@",
        "api_version": "@VK_VERSION@",
        "implementation_version": "1.0.0",
        "description": "Khronos Profiles layer",
        "introduction": "The Khronos Profiles layer helps test across a wide range of hardware capabilities without requiring a physical copy of every device.",
        "url": "https://vulkan.lunarg.com/doc/sdk/latest/windows/profiles_layer.html",
        "device_extensions": [
            {
                "name": "VK_EXT_tooling_info",
                "spec_version": "1",
                "entrypoints": [
                    "vkGetPhysicalDeviceToolPropertiesEXT"
                ]
            }
        ],
        "features": {
            "presets": [
                {
                    "label": "LunarG Desktop Portability Profile",
                    "description": "Check the Vulkan 1.1 application will run on Windows,  Linux and macOS platforms without exceeding ecosystem effective devices capabilities",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": true
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_LUNARG_desktop_portability_2021.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_LUNARG_desktop_portability_2021_subset"
                        }
                    ]
                },
                {
                    "label": "Khronos Roadmap 2022 Profile",
                    "description": "Check the Vulkan 1.3 application will run on the Khronos Roadmap 2022 Profile devices",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": false
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_KHR_roadmap_2022.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_KHR_roadmap_2022"
                        }
                    ]
                },
                {
                    "label": "Android Baseline 2021 Profile",
                    "description": "Check the Vulkan 1.0 application will run on the Android Baseline 2022 Profile devices",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": false
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_ANDROID_baseline_2021.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_ANDROID_baseline_2021"
                        }
                    ]
                }
            ],
            "settings": [
                {
                    "key": "profile_file",
                    "label": "Profile Selection",
                    "description": "Path of a profile file and the name of the profile to load.",
                    "type": "LOAD_FILE",
                    "format": "PROFILE",
                    "filter": "*.json",
                    "default": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_LUNARG_desktop_portability_2021.json",
                    "settings": [
                        {
                            "key": "profile_name",
                            "label": "Profile",
                            "description": "Name of the profile specified by the profile file to use.",
                            "type": "ENUM",
                            "flags": [],
                            "default": "${VK_PROFILES}"
                        }
                    ]
                },
                {
                    "key": "emulate_capabilities_modes",
                    "label": "Emulate Vulkan Capabilities Modes",
                    "description": "Control of the enumalated capabilities of the Vulkan physical device from the selected Vulkan Profile.",
                    "type": "GROUP",
                    "settings": [
                        {
                            "key": "emulate_extension_list",
                            "label": "Extensions",
                            "description": "Modes to control the enumalated extensions list of the Vulkan physical device.",
                            "type": "ENUM",
                            "flags": [
                                {
                                    "key": "from_device",
                                    "label": "From Device",
                                    "description": "Uses the physical device's actual format list. The selected Vulkan Profile is ignored."
                                },
                                {
                                    "key": "check_support",
                                    "label": "Check Support",
                                    "description": "Checks if the device supports the extensions from the selected Vulkan Profile."
                                },
                                {
                                    "key": "from_profile",
                                    "label": "From Profile",
                                    "description": "Replaces the device's extension list with the extension list provided by the selected Vulkan Profile, if an extension is not supported by the device it will return an error."
                                },
                                {
                                    "key": "from_profile_override",
                                    "label": "From Profile Override",
                                    "description": "Replaces the device's extension list with the extension list provided by the selected Vulkan Profile."
                                }
                            ],
                            "default": "check_support"
                        },
                        {
                            "key": "emulate_format_list",
                            "label": "Formats",
                            "description": "Modes to control the enumalated format list of the Vulkan physical device.",
                            "type": "ENUM",
                            "flags": [
                                {
                                    "key": "from_device",
                                    "label": "From Device",
                                    "description": "Uses the physical device's actual format list. The selected Vulkan Profile is ignored."
                                },
                                {
                                    "key": "check_support",
                                    "label": "Check Support",
                                    "description": "Checks if the device supports the format list from the selected Vulkan Profile."
                                },
                                {
                                    "key": "from_profile",
                                    "label": "From Profile",
                                    "description": "Fully replaces the device's format list with the format list provided by the selected Vulkan Profile, if a format is not supported by the devcie it will return an error."
                                },
                                {
                                    "key": "from_profile_override",
                                    "label": "From profile override",
                                    "description": "Fully replaces the device's format list with the format list provided by the selected Vulkan Profile."
                                }
                            ],
                            "default": "check_support"
                        },
                        {
                            "key": "emulate_format_properties",
                            "label": "Format Properties",
                            "description": "Modes to control the enumalated format properties of the Vulkan physical device.",
                            "type": "ENUM",
                            "flags": [
                                {
                                    "key": "from_device",
                                    "label": "From Device",
                                    "description": "Uses the physical device's actual format list. The selected Vulkan Profile is ignored."
                                },
                                {
                                    "key": "check_support",
                                    "label": "Check Support",
                                    "description": "Checks if the device supports the format properties from the selected Vulkan Profile."
                                },
                                {
                                    "key": "from_profile",
                                    "label": "From Profile",
                                    "description": "Fully replaces the device's format properties with the format properties provided by the selected Vulkan Profile, if format properties are not supported by the device it will return an error."
                                },
                                {
                                    "key": "from_profile_override",
                                    "label": "From Profile Override",
                                    "description": "Fully replaces the device's format properties with the format properties provided by the selected Vulkan Profile."
                                }
                            ],
                            "default": "check_support"
                        }
                    ]
                },
                {
                    "key": "emulate_portability",
                    "label": "Emulate VK_KHR_portability_subset",
                    "description": "Emulate that VK_KHR_portability_subset extension is supported by the device.",
                    "platforms": [
                        "WINDOWS",
                        "LINUX"
                    ],
                    "type": "BOOL",
                    "default": true
                },
                {
                    "key": "debug_output",
                    "label": "Debug Output",
                    "description": "Enables debug message output.",
                    "type": "BOOL",
                    "default": true
                }
            ]
        }
    }
}
