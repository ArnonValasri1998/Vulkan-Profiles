{
    "file_format_version": "1.2.0",
    "layer": {
        "name": "VK_LAYER_KHRONOS_profiles",
        "type": "GLOBAL",
        "library_path": "@RELATIVE_LAYER_BINARY@",
        "api_version": "@VK_VERSION@",
        "implementation_version": "1.6.0",
        "description": "LunarG Profiles layer",
        "introduction": "The LunarG Profiles layer helps test across a wide range of hardware capabilities without requiring a physical copy of every device.",
        "url": "https://vulkan.lunarg.com/doc/sdk/latest/windows/profiles.html",
        "device_extensions": [
            {
                "name": "VK_EXT_tooling_info",
                "spec_version": "1",
                "entrypoints": [
                    "vkGetPhysicalDeviceToolPropertiesEXT"
                ]
            }
        ],
        "features": {
            "presets": [
                {
                    "label": "Desktop Vulkan 1.0 Portability",
                    "description": "Check the Vulkan 1.0 application will run on Windows and Linux platforms without exceeding ecosystem effective devices capabilities",
                    "platforms": [ "WINDOWS", "LINUX", "MACOS" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": true
                        },
                        {
                            "key": "modify_extension_list",
                            "value": "from_profile"
                        },
                        {
                            "key": "filename",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/portability_desktop_1_0.json"
                        }
                    ]
                },
                {
                    "label": "Desktop Vulkan 1.2 Portability",
                    "description": "Check the Vulkan 1.2 application will run on Windows and Linux platforms without exceeding ecosystem effective devices capabilities.",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": true
                        },
                        {
                            "key": "modify_extension_list",
                            "value": "from_profile"
                        },
                        {
                            "key": "filename",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/portability_desktop_1_2.json"
                        }
                    ]
                },
                {
                    "label": "macOS Portability Subset",
                    "description": "Check the Vulkan application for Vulkan portability subset capabilities.",
                    "platforms": [ "WINDOWS", "LINUX", "MACOS" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": true
                        },
                        {
                            "key": "filename",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/macOS_gpu_family_1_portability.json"
                        }
                    ]
                },
                {
                    "label": "iOS GPU family 3 Portability Subset",
