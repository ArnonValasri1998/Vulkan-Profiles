{
    "file_format_version": "1.2.1",
    "layer": {
        "name": "VK_LAYER_KHRONOS_profiles",
        "type": "GLOBAL",
        "library_path": "@RELATIVE_LAYER_BINARY@",
        "api_version": "@VK_VERSION@",
        "implementation_version": "1.0.0",
        "description": "Khronos Profiles layer",
        "introduction": "The Khronos Profiles layer helps test across a wide range of hardware capabilities without requiring a physical copy of every device.",
        "url": "https://vulkan.lunarg.com/doc/sdk/latest/windows/profiles_layer.html",
        "device_extensions": [
            {
                "name": "VK_EXT_tooling_info",
                "spec_version": "1",
                "entrypoints": [
                    "vkGetPhysicalDeviceToolPropertiesEXT"
                ]
            }
        ],
        "features": {
            "presets": [
                {
                    "label": "LunarG Desktop Portability Profile",
                    "description": "Check the Vulkan 1.1 application will run on Windows,  Linux and macOS platforms without exceeding ecosystem effective devices capabilities",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": true
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_LUNARG_desktop_portability_2021.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_LUNARG_desktop_portability_2021_subset"
                        }
                    ]
                },
                {
                    "label": "Khronos Roadmap 2022 Profile",
                    "description": "Check the Vulkan 1.3 application will run on the Khronos Roadmap 2022 Profile devices",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": false
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_KHR_roadmap_2022.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_KHR_roadmap_2022"
                        }
                    ]
                },
                {
                    "label": "Android Baseline 2021 Profile",
                    "description": "Check the Vulkan 1.0 application will run on the Android Baseline 2022 Profile devices",
                    "platforms": [ "WINDOWS", "LINUX" ],
                    "status": "STABLE",
                    "settings": [
                        {
                            "key": "emulate_portability",
                            "value": false
                        },
                        {
                            "key": "profile_file",
                            "value": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_ANDROID_baseline_2021.json"
                        },
                        {
                            "key": "profile_name",
                            "value": "VP_ANDROID_baseline_2021"
                        }
                    ]
                }
            ],
            "settings": [
                {
                    "key": "profile_file",
                    "label": "Profile Selection",
                    "description": "Path of a profile file and the name of the profile to load.",
                    "type": "LOAD_FILE",
                    "filter": "*.json",
                    "default": "${VULKAN_CONTENT}/VK_LAYER_KHRONOS_profiles/VP_LUNARG_desktop_portability_2021.json",
                    "settings": [
                        {
                            "key": "profile_name",
                            "label": "Profile",
                            "description": "Name of the profile specified by the profile file to use.",
                            "type": "ENUM",
                            "flags": [],
                            "default": "",
                            "dependence": {
                                "mode": "PROFILE",
                                "settings": [
                                    {
                                        "key": "profile_file"
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "key": "debug_enable",
                    "env": "VK_PROFILES_DEBUG_ENABLE",
                    "label": "Debug Enable",
                    "description": "Enables debug message output.",
                    "type": "BOOL",
                    "default": true
                },
                {
                    "key": "emulate_portability",
                    "env": "VK_PROFILES_EMULATE_PORTABILITY_SUBSET_EXTENSION",
                    "label": "Emulate VK_KHR_portability_subset",
                    "description": "Emulate that VK_KHR_portability_subset extension is supported by the device.",
                    "platforms": [
                        "WINDOWS",
                        "LINUX"
                    ],
                    "type": "BOOL",
                    "default": true
                },
                {
                    "key": "modify_extension_list",
                    "env": "VK_PROFILES_MODIFY_EXTENSION_LIST",
                    "label": "Modify Device Extension list",
                    "description": "Modify the device extensions list from the layer JSON config file.",
                    "type": "ENUM",
                    "flags": [
                        {
                            "key": "check_support",
                            "label": "Check support",
                            "description": "Checks if the device supports the extensions from the specified profile."
                        },
                        {
                            "key": "from_profile",
                            "label": "From profile",
                            "description": "Fully replaces the device's extension list with the extension list provided by the profiles configuration file."
                        },
                        {
                            "key": "from_device",
                            "label": "From device",
                            "description": "Turns off modification of the device's extensions list. Uses the device's real extensions list."
                        }
                    ],
                    "default": "check_support"
                },
                {
                    "key": "modify_memory_flags",
                    "env": "VK_PROFILES_MODIFY_MEMORY_FLAGS",
                    "label": "Modify Device Memory Flags",
                    "description": "Modify the device memory heap flags and memory type flags from the JSON config file.",
                    "type": "BOOL",
                    "default": false
                },
                {
                    "key": "modify_format_list",
                    "env": "VK_PROFILES_MODIFY_FORMAT_LIST",
                    "label": "Modify Device Format list",
                    "description": "Modify the device format list from the layer JSON config file.",
                    "type": "ENUM",
                    "flags": [
                        {
                            "key": "check_support",
                            "label": "Check support",
                            "description": "Checks if the device supports the format list from the specified profile."
                        },
                        {
                            "key": "from_profile",
                            "label": "From profile",
                            "description": "Fully replaces the device's format list with the format list provided by the profiles configuration file."
                        },
                        {
                            "key": "from_device",
                            "label": "From device",
                            "description": "Turns off modification of the device's format list. Uses the device's real format list."
                        }
                    ],
                    "default": "check_support"
                },
                {
                    "key": "modify_format_properties",
                    "env": "VK_PROFILES_MODIFY_FORMAT_PROPERTIES",
                    "label": "Modify Device Format Properties",
                    "description": "Modify the device format properties from the layer JSON config file.",
                    "type": "ENUM",
                    "flags": [
                        {
                            "key": "check_support",
                            "label": "Check support",
                            "description": "Checks if the device supports the format properties from the specified profile."
                        },
                        {
                            "key": "from_profile",
                            "label": "From profile",
                            "description": "Fully replaces the device's format properties with the format properties provided by the profiles configuration file."
                        },
                        {
                            "key": "from_device",
                            "label": "From device",
                            "description": "Turns off modification of the device's format properties. Uses the device's real format properties."
                        }
                    ],
                    "default": "check_support"
                },
                {
                    "key": "modify_surface_formats",
                    "env": "VK_PROFILES_MODIFY_SURFACE_FORMATS",
                    "label": "Modify Device Surface Formats",
                    "description": "Modify the device surface formats from the layer JSON config file.",
                    "type": "ENUM",
                    "flags": [
                        {
                            "key": "check_support",
                            "label": "Check support",
                            "description": "Checks if the device supports the surface formats from the specified profile."
                        },
                        {
                            "key": "from_profile",
                            "label": "From profile",
                            "description": "Fully replaces the device's surface formats with the surface formats provided by the profiles configuration file."
                        },
                        {
                            "key": "from_device",
                            "label": "From device",
                            "description": "Turns off modification of the device's surface formats. Uses the device's real surface formats."
                        }
                    ],
                    "default": "check_support"
                },
                {
                    "key": "modify_present_modes",
                    "env": "VK_PROFILES_MODIFY_PRESENT_MODES",
                    "label": "Modify Device Present Modes",
                    "description": "Modify the device present mode list from the layer JSON config file.",
                    "type": "ENUM",
                    "flags": [
                        {
                            "key": "check_support",
                            "label": "Check support",
                            "description": "Checks if the device supports the present mode list from the specified profile."
                        },
                        {
                            "key": "from_profile",
                            "label": "From profile",
                            "description": "Fully replaces the device's present mode list with the present mode list provided by the profiles configuration file."
                        },
                        {
                            "key": "from_device",
                            "label": "From device",
                            "description": "Turns off modification of the device's present mode list. Uses the device's real present mode list."
                        }
                    ],
                    "default": "check_support"
                }
            ]
        }
    }
}
